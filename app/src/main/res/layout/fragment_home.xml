<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBaseline_toBaselineOf="parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_weight="0.1"
            android:id="@+id/username_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="Привет, "
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="2">
            <androidx.cardview.widget.CardView
                android:id="@+id/action_create_insurance_osago"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ecbe3e"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="12dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/document_text_svgrepo_com__1_"
                        android:layout_marginBottom="20dp">
                    </ImageView>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Обязательное страхование авто"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/action_create_insurance_kasko"
                android:layout_width="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ecbe3e"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/document_svgrepo_com"
                        android:layout_marginBottom="20dp">
                    </ImageView>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Комплексное страхование авто"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/action_create_insurance_health"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ecbe3e"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/document_medicine_svgrepo_com"
                        android:layout_marginBottom="20dp">
                    </ImageView>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Застраховать\nздоровье"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/action_create_insurance_property"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="#ecbe3e"
                app:cardCornerRadius="25dp"
                app:cardElevation="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home_svgrepo_com"
                        android:layout_marginBottom="20dp">
                    </ImageView>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Застраховать\nимущество"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/ubuntu_regular"
                        android:textSize="20dp">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/ic_phone"
            app:iconTint="@android:color/holo_red_light"
            android:id="@+id/call_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ubuntu_bold"
            android:padding="10dp"
            android:text="страховой случай"
            android:textSize="20dp"
            app:cornerRadius="10dp"
            android:layout_gravity="center"
            app:strokeColor="@android:color/holo_red_light"
            app:strokeWidth="2dp"
            android:textColor="@android:color/holo_red_light"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>